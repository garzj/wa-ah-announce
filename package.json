{
  "name": "wa-ah-announce",
  "version": "1.0.0",
  "description": "A chat bot, forwarding announcement audios to an Allen & Heath mixer over a TCP stream.",
  "author": "Johannes Garz <johannes@garz.dev> (https://garz.dev/)",
  "license": "UNLICENSED",
  "main": "./build/index.js",
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsc && tsc-alias",
    "start": "node ./build/index.js",
    "deploy": "yarn build && yarn start",
    "dev": "dotenv -v NODE_ENV=development tsx watch --clear-screen=false ./src/index.ts",
    "ncu": "ncu -u"
  },
  "devDependencies": {
    "@types/node": "^20.3.2",
    "dotenv-cli": "^7.4.2",
    "npm-check-updates": "^16.14.20",
    "tsx": "^4.9.3",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.4.1",
    "dotenv": "^16.3.1",
    "node-cache": "^5.1.2",
    "pino": "^8.15.1",
    "qrcode-terminal": "^0.12.0",
    "tiny-typed-emitter": "^2.1.0"
  }
}
